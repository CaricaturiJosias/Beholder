module DSMComms {

    enum EventEnum {
        TEST,
        NONE,
        HAHA
    };

    enum DataType {
        UNKNOWN,
        ANALOG,
        DIGITAL
    };

    struct Value {
        double storedValue;
        long timestamp;
    };

    typedef sequence<Value> ValSeq;
    typedef sequence<string> StringSeq;

    interface POA_Beholder {

        // operações
        void LogEventAll(in string valor, in EventEnum event);
        
        void getValue(in StringSeq valueId, out ValSeq toGetValue, in DataType type);

        void storeValue(in StringSeq valueId, in ValSeq toGetValue, in DataType type);
    };

};
